<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/siramdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapping entity -->
        <mapping class="Model.Cuaca"/>
        <mapping class="Model.CuacaHujan"/>
        <mapping class="Model.CuacaPanas"/>
        <mapping class="Model.Daerah"/>
        <mapping class="Model.Laporan"/>
        <mapping class="Model.LevelPanas"/>
        <mapping class="Model.PotensiBanjir"/>
        <mapping class="Model.StatusCuaca"/>
        <mapping class="Model.StatusTindak"/>
        <mapping class="Model.StatusTindakConverter"/>
        <mapping class="Model.TindakLanjut"/>
        <mapping class="Model.Users"/>
    </session-factory>
</hibernate-configuration>
